{
	// 有关 tasks.json 格式的文档，请参见
	// https://go.microsoft.com/fwlink/?LinkId=733558
	"version": "2.0.0",
	"tasks": [
		{
			// "type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "g++",
			"args": [
				"-g",
				"-static",
				//"${workspaceFolder}\\*.cpp",	//多文件编译
				"${file}", //单文件编译用这个
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-lwsock32",
				"-lgraphics64",
				"-luuid",
				"-lmsimg32",
				"-lgdi32",
				"-limm32",
				"-lole32",
				"-loleaut32",
				"-lwinmm",
				"-lgdiplus",
			],
			"options": {
				"cwd": "D:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}